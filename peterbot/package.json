{
  "name": "peterbot",
  "version": "0.1.0",
  "description": "Telegram AI agent with tracer bullet methodology",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/core/server.ts",
    "worker": "bun run src/worker/worker.ts",
    "start": "NODE_ENV=production bun run src/core/server.ts",
    "web:dev": "cd web && bun run dev",
    "web:build": "cd web && bun run build",
    "build": "bun run web:build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "tracer": "bun run scripts/tracer.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.1.0",
    "@ai-sdk/google": "^1.1.0",
    "@ai-sdk/openai": "^3.0.29",
    "@e2b/code-interpreter": "^1.0.5",
    "@google/genai": "^1.41.0",
    "@hono/zod-validator": "^0.7.6",
    "ai": "^4.3.0",
    "cron-parser": "^5.5.0",
    "drizzle-orm": "^0.38.3",
    "grammy": "^1.31.0",
    "hono": "^4.6.0",
    "openai": "^6.22.0",
    "zhipu-ai-provider": "^0.2.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.30.2",
    "typescript": "^5.9.3"
  }
}
